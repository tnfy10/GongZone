<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GongZone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_sub_color</item>
        <item name="colorSecondaryVariant">@color/sub_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- SplashTheme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_color</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Bottom navigation view -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/noto_sans_cjk_kr_medium</item>
    </style>

    <!-- Custom chip style -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- Input info text style -->
    <style name="InputInfoTextStyle">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Input info edit text style -->
    <style name="InputInfoEditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:backgroundTint">@color/gray_400</item>
    </style>

    <!-- Bottom button background layout style -->
    <style name="BottomButtonBackgroundLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>